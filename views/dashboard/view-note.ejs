<div class="container-fluid">
  <div class="row">
    <div class="col">
      <nav>
        <ol class="breadcrumb text-light">
          <li class="breadcrumb-item"><a href="/dashboard"> Dashboard</a></li>
          <li class="breadcrumb-item"><%= note.title %></li>
        </ol>
      </nav>
      <div class="container d-flex">
        <div class="col-6">
          <h3 class="text-light">Edit Your note , <%= userName %></h3>
        </div>
        <div class="col-6 text-end">
          <div class="btn bg-danger text-end text-light" data-bs-toggle="modal" id="deleteButton" data-bs-target="#deleteModal">Delete</div>
        </div>
      </div>
      <div class="container">
        <form action="/dashboard/item/<%=NoteID %>?_method=PUT" method="POST" class="position-relative">
          <div class="form-group mb-2 mt-4">
            <p class="text-light">title :</p>
            <input type="text" class="form-control fw-lead border-0 fs-4" id="title" name="title" value="<%= note.title %>" placeholder="Title" />
          </div>
          <div class="form-group mb-4">
            <p class="text-light">body :</p>
            <textarea
              class="form-control fs-6 text-secondary"
              style="height: 400px; resize: none"
              name="body"
              id="body"
              placeholder="Take a notes..."
              rows="12"
            >
<%= note.body%></textarea
            >
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary mb-5">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- Modal -->
<div class="modal" tabindex="-1" id="deleteModal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">You are about to delete a note</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>
          This will delete your note <b class="fw-bold"><%= note.title %></b> <br />
          Are you sure ?
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <form action="/dashboard/item-delete/<%= note._id %>?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-primary bg-danger">Delete Note</button>
        </form>
      </div>
    </div>
  </div>
</div>
