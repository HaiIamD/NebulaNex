<div class="container-fluid">
  <div class="row">
    <div class="col">
      <nav aria-label="breadcrumb ">
        <ol class="breadcrumb text-light">
          <li class="breadcrumb-item"><a href="/dashboard"> Dashboard</a></li>
          <li class="breadcrumb-item">Add Note</li>
        </ol>
      </nav>
      <div class="container d-flex">
        <div class="col-6">
          <h3 class="text-light">Add Note</h3>
        </div>
        <div class="col-6 text-end">
          <div class="btn bg-success text-end"><i class="bi bi-lightbulb-fill"></i></div>
        </div>
      </div>
      <div class="container">
        <form action="/dashboard/add" method="POST" class="position-relative">
          <div class="form-group mb-2 mt-4">
            <p class="text-light">title :</p>
            <input type="text" class="form-control fw-lead border-0 fs-4" id="title" name="title" placeholder="Title" required />
          </div>
          <div class="form-group mb-4">
            <p class="text-light">body :</p>
            <textarea
              class="form-control p-4 pb-2 fs-6"
              style="height: 400px; resize: none"
              name="body"
              id="body"
              placeholder="Take a notes..."
              rows="12"
              required
            ></textarea>
          </div>

          <div class="form-group">
            <button type="submit" class="btn btn-primary mb-5">+ Add Note</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
